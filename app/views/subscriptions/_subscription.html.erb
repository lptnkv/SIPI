<div class="subscription">
  <% if subscription.user.present? %>
    <%= render partial: 'users/user', object: subscription.user %>
  <% else %>
    <div class="buffer-bottom-sm"><%= subscription.user_name %></div>
  <% end %>

  <% if current_user_can_edit?(subscription) && subscription.user == current_user %>
    <div class="mt-2">
       <%= button_to 'Отписаться',
                     event_subscription_path(subscription.event, subscription),
                     method: :delete, class: 'btn btn-danger text-sm',
                     data: {confirm: t('.destroy_confirm')} %>
    </div>
  <% end %>
</div>
