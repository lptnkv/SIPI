<div class="text-center">
  <h1>
    <%= @user.name %>
  </h1>

  <%= image_tag user_avatar(@user), class: 'img-profile' %>

  <% if @user == current_user %>
    <p class="buffer-top buffer-bottom">
      <%= link_to t('edit.account'), edit_user_path(@user), class: 'btn btn-dark' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-10 offset-1">
      <% if @user.events.any? %>
        <h3 class="mb-5 mt-3"><%= t('app.organize') %>:</h3>
        <div class="row text-start">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top"><%= t('notifications.did_not_organize') %></p>
      <% end %>
    </div>
  </div>
</div>
