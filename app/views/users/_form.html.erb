<%= form_for @user, html: { multipart: true } do |f| %>

  <%= render partial: 'partials/form_errors', locals: { model: @user } %>

  <div class="d-flex flex-column">
    <div class="form-group d-inline-flex buffer-bottom-sm const-width">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Имя", class: 'form-control buffer-right-sm' %>
      <span class="align-self-center">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
      </svg>
    </span>
    </div>

    <div class="form-group d-inline-flex const-width buffer-bottom-sm">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: 'form-control buffer-right-sm const-width' %>
      <span class="align-self-center">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope" viewBox="0 0 16 16">
        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z"/>
      </svg>
    </span>
    </div>

    <div class="form-group d-flex flex-column const-width">
      <%= f.label :avatar %>
      <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
      <%= f.file_field :avatar %>
    </div>

    <div class="actions buffer-top">
      <%= f.submit t('app.save'), class: 'btn btn-primary buffer-right-sm' %>
      <%= link_to t('app.back'), :back %>
    </div>
  </div>
<% end %>
